<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black flex items-center justify-center p-4">
  <div class="bg-white/10 backdrop-blur-xl p-8 rounded-2xl shadow-2xl w-full max-w-md border border-white/20 animate-fadeIn">
    <h2 class="text-3xl font-bold text-center mb-2 text-white">
      Create Account
    </h2>
    <p class="text-center text-gray-300 mb-6 text-sm">
      Join us and start ordering from your favorite restaurants
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :name, autofocus: true, placeholder: "Enter your full name", class: "w-full px-4 py-3 rounded-xl bg-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "you@example.com", class: "w-full px-4 py-3 rounded-xl bg-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" do %>
          Password
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a secure password", class: "w-full px-4 py-3 rounded-xl bg-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-enter your password", class: "w-full px-4 py-3 rounded-xl bg-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 transition" %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "w-full py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-xl mt-4 shadow-lg transform hover:scale-[1.02] transition-all cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
