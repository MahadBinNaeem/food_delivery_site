<div class="min-h-screen bg-gradient-to-b from-orange-50 to-white py-10">
  <div class="mx-auto max-w-5xl space-y-8 px-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-2 text-sm text-orange-600">
      <a href="<%= dashboard_path %>" class="inline-flex items-center gap-1 font-semibold hover:text-orange-700">
        <span aria-hidden="true">&larr;</span>
        Back to dashboard
      </a>
      <span class="text-gray-400">/</span>
      <span class="text-gray-600">Restaurant</span>
    </div>

    <div class="rounded-3xl bg-white p-6 shadow-2xl shadow-orange-100 ring-1 ring-orange-100">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-center">
        <% if @restaurant.cover_image_url.present? %>
          <img
            src="<%= @restaurant.cover_image_url %>"
            alt="<%= @restaurant.name %> cover"
            class="h-40 w-full rounded-2xl object-cover lg:h-48 lg:w-72"
          />
        <% end %>
        <div class="flex-1 space-y-3">
          <div>
            <p class="text-xs uppercase tracking-[0.4em] text-gray-500">Restaurant</p>
            <h1 class="text-3xl font-semibold text-gray-900"><%= @restaurant.name %></h1>
          </div>
          <% if @restaurant.description.present? %>
            <p class="text-gray-600"><%= @restaurant.description %></p>
          <% end %>
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="rounded-2xl bg-orange-50 p-4">
              <dt class="text-xs uppercase tracking-[0.4em] text-orange-500">Cuisine</dt>
              <dd class="text-lg font-semibold text-gray-900">
                <%= @restaurant.cuisine_type.presence || "Various" %>
              </dd>
            </div>
            <div class="rounded-2xl bg-emerald-50 p-4">
              <dt class="text-xs uppercase tracking-[0.4em] text-emerald-500">Rating</dt>
              <dd class="text-lg font-semibold text-gray-900">
                <%= @restaurant.rating&.positive? ? "#{@restaurant.rating.round(1)}â˜…" : "New" %>
              </dd>
            </div>
            <div class="rounded-2xl bg-cyan-50 p-4">
              <dt class="text-xs uppercase tracking-[0.4em] text-cyan-500">Hours</dt>
              <dd class="text-lg font-semibold text-gray-900">
                <% if @restaurant.opening_time.present? && @restaurant.closing_time.present? %>
                  <%= l(@restaurant.opening_time, format: :short) %> â€“ <%= l(@restaurant.closing_time, format: :short) %>
                <% else %>
                  Daily
                <% end %>
              </dd>
            </div>
          </dl>
          <div class="flex flex-wrap gap-3 text-sm text-gray-600">
            <% if @restaurant.address.present? %>
              <div class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1">
                <span aria-hidden="true">ğŸ“</span>
                <span><%= @restaurant.address %></span>
              </div>
            <% end %>
            <% if @restaurant.contact_number.present? %>
              <div class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1">
                <span aria-hidden="true">â˜</span>
                <span><%= @restaurant.contact_number %></span>
              </div>
            <% end %>
            <% if @restaurant.delivery_time_minutes.present? %>
              <div class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-3 py-1">
                <span aria-hidden="true">ğŸšš</span>
                <span><%= @restaurant.delivery_time_minutes %> min delivery</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if @highlighted_dishes.any? %>
      <section class="space-y-3">
        <div>
          <p class="text-xs uppercase tracking-[0.4em] text-gray-400">Chef's picks</p>
          <h2 class="text-2xl font-semibold text-gray-900">Popular dishes</h2>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <% @highlighted_dishes.each do |dish| %>
            <article class="rounded-2xl border border-gray-100 bg-white p-4 shadow-sm">
              <div class="flex items-center justify-between gap-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= dish.name %></h3>
                  <% if dish.description.present? %>
                    <p class="text-sm text-gray-600"><%= dish.description %></p>
                  <% end %>
                </div>
                <p class="text-lg font-bold text-gray-900"><%= number_to_currency(dish.price) %></p>
              </div>
              <div class="mt-3 flex items-center gap-2 text-xs text-gray-500">
                <span class="rounded-full bg-orange-50 px-3 py-1 font-semibold text-orange-500">
                  <%= dish.menu.try(:name) || "Menu" %>
                </span>
                <% if dish.dietary_tags.present? %>
                  <span><%= dish.dietary_tags %></span>
                <% end %>
              </div>
            </article>
          <% end %>
        </div>
      </section>
    <% end %>

    <section class="space-y-6">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-gray-400">Full selection</p>
        <h2 class="text-2xl font-semibold text-gray-900">Menus &amp; dishes</h2>
      </div>

      <% if @menus.any? %>
        <div class="space-y-6">
          <% @menus.each do |menu| %>
            <article class="rounded-3xl border border-gray-100 bg-white p-6 shadow-lg">
              <div class="flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
                <div>
                  <h3 class="text-xl font-semibold text-gray-900"><%= menu.name %></h3>
                  <% if menu.description.present? %>
                    <p class="text-sm text-gray-600"><%= menu.description %></p>
                  <% end %>
                </div>
                <span class="text-xs uppercase tracking-[0.4em] text-gray-400">
                  <%= menu.is_active? ? "Available now" : "Coming soon" %>
                </span>
              </div>
              <% if menu.menu_items.any? %>
                <ul class="mt-4 space-y-4">
                  <% menu.menu_items.each do |item| %>
                    <li class="rounded-2xl bg-gray-50 p-4">
                      <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                        <div>
                          <p class="text-lg font-semibold text-gray-900"><%= item.name %></p>
                          <% if item.description.present? %>
                            <p class="text-sm text-gray-600"><%= item.description %></p>
                          <% end %>
                        </div>
                        <p class="text-lg font-bold text-gray-900"><%= number_to_currency(item.price) %></p>
                      </div>
                      <div class="mt-3 flex flex-wrap gap-2 text-xs text-gray-500">
                        <% if item.dietary_tags.present? %>
                          <span class="rounded-full bg-white px-3 py-1 font-semibold">
                            <%= item.dietary_tags %>
                          </span>
                        <% end %>
                        <% if item.spice_level.present? %>
                          <span class="rounded-full bg-white px-3 py-1 font-semibold">
                            <%= item.spice_level %> spice
                          </span>
                        <% end %>
                        <% if item.prep_time_minutes.present? %>
                          <span class="rounded-full bg-white px-3 py-1 font-semibold">
                            ~<%= item.prep_time_minutes %> min prep
                          </span>
                        <% end %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="mt-4 rounded-2xl border border-dashed border-gray-200 bg-gray-50 p-4 text-sm text-gray-500">
                  No dishes listed in this menu yet.
                </p>
              <% end %>
            </article>
          <% end %>
        </div>
      <% else %>
        <p class="rounded-3xl border border-dashed border-gray-200 bg-white p-6 text-gray-500">
          This restaurant has not published its menus yet.
        </p>
      <% end %>
    </section>
  </div>
</div>
